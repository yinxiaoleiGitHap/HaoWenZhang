<% include ./header %>


    <table class="table table-hover articleList">
        <tr>
            <td>头像</td>
            <td>签名标题</td>
            <td>所属类别</td>
            <td>发布时间</td>
            <td>操作</td>
        </tr>
        <% articlelist.forEach(function(val){ %>
            <tr>
                <td>
                    <img src="/<%=val.imgurl%>" alt="">
                </td>
                <td>
                    <%=val.title%>
                </td>
                <td>
                    <%=val.itemId.name %>
                </td>
                <td>
                    <%=val.ctime.toLocaleString()   %>
                </td>
                
                <td>
                    <a href="/admin/articleEdit/<%=val._id%>">编辑</a>
                    |
                    <a href="/admin/articleRemove/<%=val._id%>" onclick="return confirm('您确定要删除吗？')">删除</a>
                </td>
            </tr>
            <% })%>
    </table>


    <!-- 分页 -->
    <nav aria-label="Page navigation">
        <div class="center">
            <ul class="pagination">
                <li>
                    <a href="/admin/articleList">首页</a>
                </li>
                <li>
                    <a href="/admin/articleList?page=<%=page-1%>" aria-label="Previous">
                        <span aria-hidden="true">&laquo;</span>
                    </a>
                </li>

                <% for(var i=1;i<= maxPage; i++){ %>
                    <li>
                        <a href="/admin/articleList?page=<%=i%>">
                            <%=i%>
                        </a>
                    </li>
                <% } %>

                <li>
                    <a href="/admin/articleList?page=<%=page+1%>" aria-label="Next">
                        <span aria-hidden="true">&raquo;</span>
                    </a>
                </li>
                <li>
                    <a href="/admin/articleList?page=<%=maxPage%>">尾页</a>
                </li>
            </ul>
        </div>
    </nav>
    <!-- 分页 end -->

    <% include ./footer %>
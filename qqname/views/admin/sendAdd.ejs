<% include ./header %>
<!-- 发布连接 -->
<div class="container sendAdd">
   <div class="row">
       <form action="sendInsert" method="POST">
       <div class="col-md-6">
            <div class="input-group">
                <span class="input-group-addon">类别名称</span>
                <select name="loveId" class="form-control">
                
                    <!-- 循环分类列表 -->
                    <% lovelist.forEach(function(val){ %>
                        <option value="<%=val._id%>"><%=val.name%></option>
                    <% }) %>
                </select>
            </div>
       </div>
       <div class="col-md-6">
            <div class="input-group">
                <span class="input-group-addon">标题</span>
                <input type="text" class="form-control" name="title">
            </div>
       </div>
       <div class="col-md-12">
            <div class="input-group">
                <span class="input-group-addon"> 关 键 字 </span>
                <input type="text" class="form-control" name="keywords">
            </div>
       </div>
       <div class="col-md-12">
            <div class="input-group">
                <span class="input-group-addon">描述</span>
                <input type="text" class="form-control" name="description">
            </div>
       </div>
       
       <div class="col-md-6">
            <input class="reset" type="reset">
       </div>
       <div class="col-md-6">
            <input class="submit" type="submit">
       </div>
    </form>
    </div>
</div>



<% include ./footer %>